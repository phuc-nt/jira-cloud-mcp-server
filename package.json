{
  "name": "@phuc-nt/mcp-atlassian-server",
  "version": "4.1.0",
  "description": "MCP Server for interacting with Atlassian Jira (modular architecture with 4 specialized entry points)",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md", 
    "LICENSE",
    "assets"
  ],
  "bin": {
    "mcp-atlassian-server": "dist/index.js",
    "mcp-jira-core": "dist/modules/core/index.js",
    "mcp-jira-agile": "dist/modules/agile/index.js",
    "mcp-jira-dashboard": "dist/modules/dashboard/index.js",
    "mcp-jira-search": "dist/modules/search/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:core": "tsc && echo '✅ Core module built'",
    "build:agile": "tsc && echo '✅ Agile module built'", 
    "build:dashboard": "tsc && echo '✅ Dashboard module built'",
    "build:search": "tsc && echo '✅ Search module built'",
    "build:all": "npm run build && echo '✅ All modules built'",
    "start": "node dist/index.js",
    "start:core": "node dist/modules/core/index.js",
    "start:agile": "node dist/modules/agile/index.js",
    "start:dashboard": "node dist/modules/dashboard/index.js", 
    "start:search": "node dist/modules/search/index.js",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "test:modules": "cd test-client && npm run test:modular",
    "test:core": "cd test-client && npm run test:core",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "mcp",
    "model",
    "context",
    "protocol",
    "atlassian",
    "jira",
    "tools-only"
  ],
  "author": "Phuc Nguyen",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "axios": "^1.6.2",
    "axios-retry": "^4.5.0",
    "cross-fetch": "^4.1.0",
    "dotenv": "^16.4.1",
    "jira.js": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.13",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phuc-nt/mcp-atlassian-server.git"
  },
  "homepage": "https://github.com/phuc-nt/mcp-atlassian-server#readme",
  "bugs": {
    "url": "https://github.com/phuc-nt/mcp-atlassian-server/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
